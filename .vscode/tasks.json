{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Sketch",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "command": "${config:processing.path}",
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "dedicated"
        },
        "args": [
          "--force",
          "--sketch=${workspaceRoot}/path",
          "--output=${workspaceRoot}/_OUT",
          "--run"
        ],
        "windows": {
          "args": [
            "--force",
            "--sketch=${workspaceRoot}/ComputeShader/FlowerComputeShader",
            "--output=${workspaceRoot}\\_OUT",
            "--run"
          ]
        }
      }
    ]
  }